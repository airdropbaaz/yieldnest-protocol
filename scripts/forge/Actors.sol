            STAKING_ADMIN: 0xa9295EA69DaF30A8CB81610c23966240BdDA2876,
            // admin multisig roles
            PROXY_ADMIN_OWNER: 0xa9295EA69DaF30A8CB81610c23966240BdDA2876,
